{
  "annotations": {
    "list": []
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "links": [],
  "panels": [
    {
      "title": "Application Up",
      "type": "stat",
      "datasource": "Prometheus",
      "gridPos": { "h": 4, "w": 4, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "up{job=\"iot-app\"}",
          "legendFormat": "{{instance}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "options": { "0": { "text": "DOWN", "color": "red" }, "1": { "text": "UP", "color": "green" } }, "type": "value" }
          ],
          "thresholds": { "mode": "absolute", "steps": [{ "color": "red", "value": null }, { "color": "green", "value": 1 }] }
        }
      }
    },
    {
      "title": "JVM Heap Memory Used",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 4, "y": 0 },
      "targets": [
        {
          "expr": "jvm_memory_used_bytes{area=\"heap\", job=\"iot-app\"}",
          "legendFormat": "{{id}}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "bytes" } }
    },
    {
      "title": "HTTP Request Rate (per second)",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 0 },
      "targets": [
        {
          "expr": "rate(http_server_requests_seconds_count{job=\"iot-app\"}[1m])",
          "legendFormat": "{{method}} {{uri}} {{status}}"
        }
      ]
    },
    {
      "title": "HTTP Request Duration (p95)",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(http_server_requests_seconds_bucket{job=\"iot-app\"}[5m]))",
          "legendFormat": "p95 {{uri}}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s" } }
    },
    {
      "title": "JVM Threads",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "targets": [
        {
          "expr": "jvm_threads_live_threads{job=\"iot-app\"}",
          "legendFormat": "Live Threads"
        },
        {
          "expr": "jvm_threads_daemon_threads{job=\"iot-app\"}",
          "legendFormat": "Daemon Threads"
        }
      ]
    },
    {
      "title": "CPU Usage",
      "type": "gauge",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 16 },
      "targets": [
        {
          "expr": "process_cpu_usage{job=\"iot-app\"}",
          "legendFormat": "CPU"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0, "max": 1,
          "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 0.5 }, { "color": "red", "value": 0.8 }] }
        }
      }
    },
    {
      "title": "Application Logs",
      "type": "logs",
      "datasource": "Loki",
      "gridPos": { "h": 10, "w": 16, "x": 8, "y": 16 },
      "targets": [
        {
          "expr": "{application=\"iot-home-automation\"}",
          "legendFormat": ""
        }
      ]
    },
    {
      "title": "GC Pause Duration",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 26 },
      "targets": [
        {
          "expr": "rate(jvm_gc_pause_seconds_sum{job=\"iot-app\"}[1m])",
          "legendFormat": "{{action}} {{cause}}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s" } }
    },
    {
      "title": "DB Connection Pool",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 26 },
      "targets": [
        {
          "expr": "hikaricp_connections_active{job=\"iot-app\"}",
          "legendFormat": "Active"
        },
        {
          "expr": "hikaricp_connections_idle{job=\"iot-app\"}",
          "legendFormat": "Idle"
        },
        {
          "expr": "hikaricp_connections_pending{job=\"iot-app\"}",
          "legendFormat": "Pending"
        }
      ]
    }
  ],
  "schemaVersion": 39,
  "tags": ["iot", "spring-boot", "jvm"],
  "templating": { "list": [] },
  "time": { "from": "now-1h", "to": "now" },
  "title": "IoT Home Automation System",
  "uid": "iot-home-automation",
  "version": 1
}
