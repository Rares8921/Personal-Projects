        <span></span>
      
        <!-- logo -->
        <a href="./" class="menu-logo"><img id="navTitle" alt="StreamPulse" src="/imgs/streampulseLogo.png"></a>
      
        <!-- menu items -->
        <div class="menu">
          <ul>
            <li><a href="./movielist">Movie lists</a></li>
            <li><a href="./detail">Detail page</a></li>
