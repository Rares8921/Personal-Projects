<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="root" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/16" fx:controller="sample.application.promotion.PromotionController">
	<HBox fx:id="pieces" alignment="CENTER" spacing="50">
		<VBox.margin>
			<Insets bottom="0.0" left="25.0" right="25.0" top="30.0" />
		</VBox.margin>
		<Label onMouseEntered="#selectPiece" text="" textFill="WHITE">
         <font>
            <Font name="Verdana" size="12.0" />
         </font></Label>
		<Label onMouseEntered="#selectPiece" text="" textFill="WHITE">
         <font>
            <Font name="Verdana" size="12.0" />
         </font></Label>
		<Label onMouseEntered="#selectPiece" text="" textFill="WHITE">
         <font>
            <Font name="Verdana" size="12.0" />
         </font></Label>
		<Label onMouseEntered="#selectPiece" text="" textFill="WHITE">
         <font>
            <Font name="Verdana" size="12.0" />
         </font></Label>
	</HBox>
	<Region VBox.vgrow="ALWAYS" />
	<HBox alignment="CENTER" spacing="10">
		<VBox.margin>
			<Insets bottom="10.0" left="25.0" right="25.0" top="10.0" />
		</VBox.margin>
		<Button fx:id="selectButton" onAction="#selectButtonAction" styleClass="actionButton" text="Select">
         <font>
            <Font name="Verdana" size="12.0" />
         </font></Button>
	</HBox>
	<stylesheets>
		<URL value="@PromotionLayout.css" />
	</stylesheets>
</VBox>
