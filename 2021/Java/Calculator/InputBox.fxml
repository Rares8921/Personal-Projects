<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="box" prefHeight="100.0" prefWidth="300.0" style="-fx-background-color: #595858;" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.InputBox">
   <children>
      <Label fx:id="Title" layoutX="20.0" layoutY="7.0" text="Label" textFill="WHITE">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Button fx:id="close" layoutX="254.0" layoutY="1.0" mnemonicParsing="false" onAction="#closeBox" prefHeight="33.0" prefWidth="46.0" styleClass="closeBoxButton" text="X" textFill="WHITE" underline="true">
         <font>
            <Font name="Microsoft Sans Serif" size="16.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <TextField fx:id="input" layoutX="64.0" layoutY="50.0" onAction="#inputBox" onKeyTyped="#inputBox" promptText="Ex: 3" style="-fx-background-color: #595858; -fx-accent: #878787; -fx-text-fill: white; -fx-border-radius: 7; -fx-border-color: white;">
         <font>
            <Font size="14.0" />
         </font>
      </TextField>
      <Button fx:id="inputButton" layoutX="202.0" layoutY="1.0" mnemonicParsing="false" onAction="#inputButton" prefHeight="31.0" prefWidth="52.0" styleClass="checkButton" text="⏎" textFill="WHITE">
         <font>
            <Font name="Microsoft Sans Serif" size="17.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
   </children>
</AnchorPane>
